#!/bin/bash

set -e -o pipefail

# Configure: gst-rtsp
if [[ ! -e "${EP_RUN}" ]] ; then
	log "Configuring $(basename "${0}") for first run ..."

	# Generate keypairs ...
	generate_rsakey "gst-rtsp"

	ln --symbolic /etc/ssl/certs/gst-rtspca.crt /usr/share/ca-certificates/
	echo gst-rtspca.crt >> /etc/ca-certificates.conf
	update-ca-certificates
fi

